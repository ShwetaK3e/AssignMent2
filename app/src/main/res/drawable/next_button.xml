<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_activated="true">
        <shape
            android:shape="rectangle">

            <gradient android:startColor="@color/colorActive" android:endColor="@color/colorActive"
                android:angle="225"/>

            <stroke android:width="1dp"
                android:dashWidth="5dp"
                android:dashGap="2dp"
                android:color="@color/black"
                />

            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"
                />

            <corners android:bottomRightRadius="30dp" android:bottomLeftRadius="30dp"
                android:topLeftRadius="30dp" android:topRightRadius="30dp"/>

        </shape>

    </item>


    <item>
        <shape
            android:shape="rectangle">

            <gradient android:startColor="@color/colorInactive" android:endColor="@color/colorInactive"
                android:angle="225"/>

            <stroke android:width="1dp"
                android:dashWidth="5dp"
                android:dashGap="1dp"
                android:color="@color/black"
                />

            <padding android:left="1dp"
                android:right="1dp"
                />

            <corners android:bottomRightRadius="30dp" android:bottomLeftRadius="30dp"
                android:topLeftRadius="30dp" android:topRightRadius="30dp"/>

        </shape>

    </item>



</selector>